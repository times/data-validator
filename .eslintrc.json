{
  "env": { "es6": true, "node": true },
  "globals": {},
  "extends": ["eslint:recommended"],
  "rules": {
    "linebreak-style": ["error", "unix"],
    "no-eval": ["error"],
    "eqeqeq": ["error"],
    "no-unused-expressions": 1
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    }
  },
  "plugins": ["flowtype"]
}
